<script>
function addUser() {
	var s1=''
	getElement('output1').innerHTML=s1
	try {
		U.push({
		    id: getValue('id'),
		    password: getValue('pass'),
		    name: getValue('name'),
		    type: getValue('type'),
		  })
		  console.log(U);
	}
	catch(err) {
	    document.getElementById("output1").innerHTML = err.message;
	}
  
  store(function() {
	
	getElement('output1').innerHTML=s1
    retrieveAndDisplay()
  })
}

function removeUser() {
  U.pop()
  store(function() {
    retrieveAndDisplay()
  })
}



</script>
