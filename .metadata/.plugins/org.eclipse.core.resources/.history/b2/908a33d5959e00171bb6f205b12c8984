<script>
function check() {
	var r= 'validating';
	var name=''
	var type=''
	
	var i= 0;
	var id= getValue('id');
	var password= getValue('pass');
	for(obj of U){
		if(obj.id==id && obj.password==password){
			i=1;
			name+=obj.name;
			type+=obj.type;
			
			
			
			break;}
		else{
			i=0;}
	}
	
	if(i==1){
		r='Success <br>'+'Welcome '+name;
		if (typeof(Storage) !== "undefined") {
			localStorage.setItem("name", name);
			// Retrieve
			
		    
		} else {
		    // Sorry! No Web Storage support..
		}
		if(type=='student')
		{
	      window.open('exam.html')		
			}
		else{
			window.open('questions.html')
		}
		
		
	}
	else{
		r='Invalid User';
	}
	
	document.getElementById('output').innerHTML=r;
	
}




</script>

